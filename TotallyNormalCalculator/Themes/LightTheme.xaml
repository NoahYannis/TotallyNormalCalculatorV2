<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundColor" Color="LightBlue" />
    <SolidColorBrush x:Key="ForegroundColor" Color="Black" />
    <SolidColorBrush x:Key="BorderBackground" Color="White" />
    <SolidColorBrush x:Key="MouseOver" Color="LightGray" />
    <SolidColorBrush x:Key="Selected" Color="Silver" />
    <SolidColorBrush x:Key="DiaryEntryColor" Color="White" />
    <SolidColorBrush x:Key="BorderBrush" Color="Gold" />
    <SolidColorBrush x:Key="RadioButtonMenu" Color="Silver" />
    <SolidColorBrush x:Key="BorderIndicator" Color="DarkGray" />
    <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Offset="0" Color="Silver" />
        <GradientStop Offset="1" Color="White" />
    </LinearGradientBrush>

</ResourceDictionary>