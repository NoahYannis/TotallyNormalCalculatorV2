<UserControl
    x:Class="TotallyNormalCalculator.MVVM.Views.DiaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:TotallyNormalCalculator.Behavior"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:TotallyNormalCalculator.MVVM.Model"
    xmlns:viewmodels="clr-namespace:TotallyNormalCalculator.MVVM.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="650"
    FontSize="15"
    mc:Ignorable="d">

    <UserControl.Resources>
        <model:DiaryEntryModel x:Key="DiaryEntryModel" />
    </UserControl.Resources>

    <Grid Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.ColumnSpan="2"
            Height="25"
            VerticalAlignment="Top"
            behavior:EnableDragHelper.EnableDrag="True"
            AllowDrop="True"
            Background="SkyBlue">

            <StackPanel
                MinHeight="25"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Background="LightGreen"
                    Command="{Binding MinimizeWindowCommand}"
                    Content="🗕"
                    Style="{StaticResource WindowControlButton}" />

                <Button
                    Background="LightGreen"
                    Command="{Binding MaximizeWindowCommand}"
                    Content="□"
                    Style="{StaticResource WindowControlButton}" />

                <Button
                    Background="LightGreen"
                    Command="{Binding CloseWindowCommand}"
                    Content="X"
                    Style="{StaticResource WindowControlButton}" />
            </StackPanel>
        </Border>

        <Grid Margin="0,25,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ComboBox
                Grid.Row="0"
                IsEditable="True"
                IsReadOnly="True"
                SelectedValue="{Binding PropertyFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Tag"
                Text="Select filter...">
                <ComboBoxItem Content="Filter: Title" Tag="Title" />
                <ComboBoxItem Content="Filter: Message" Tag="Message" />
                <ComboBoxItem Content="Filter: Date" Tag="Date" />
            </ComboBox>
            <!--  IsEditable and IsReadonly both have to be true to display the placeholder text  -->

            <TextBox Grid.Row="1" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

            <ListView
                Grid.Row="2"
                behavior:ListBoxScrollOnNewEntry.ScrollOnNewItem="True"
                ItemContainerStyle="{StaticResource DiaryEntries}"
                ItemsSource="{Binding Entries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SelectedEntry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectionMode="Single">
                <i:Interaction.Behaviors>
                    <behavior:DeselectCurrentListViewEntry />
                </i:Interaction.Behaviors>
            </ListView>
        </Grid>

        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBox
                    x:Name="txtTitle"
                    Height="30"
                    MinHeight="30"
                    Margin="10,0,180,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    behavior:CornerRadiusSetter.CornerRadius="5"
                    Text="{Binding Path=Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Margin="15,0,0,16"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Foreground="DarkGray"
                    IsHitTestVisible="False"
                    Text="Title">

                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtTitle}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBox
                    x:Name="txtDate"
                    Width="150"
                    MinHeight="30"
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    behavior:CornerRadiusSetter.CornerRadius="5"
                    Text="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Margin="0,0,123,16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Foreground="DarkGray"
                    IsHitTestVisible="False"
                    Text="Date">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtDate}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <TextBox
                x:Name="txtMessage"
                Grid.Row="1"
                behavior:CornerRadiusSetter.CornerRadius="5"
                AcceptsReturn="True"
                AcceptsTab="True"
                Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <TextBlock
                Grid.Row="1"
                Width="58"
                Height="20"
                Margin="10,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="DarkGray"
                IsHitTestVisible="False"
                Text="Message">

                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=txtMessage}" Value="">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>


            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    Command="{Binding DeleteEntryCommand}"
                    Content="Delete"
                    Style="{StaticResource DiaryButtons}" />

                <Button
                    Command="{Binding AddEntryCommand}"
                    Content="Add"
                    Style="{StaticResource DiaryButtons}" />

                <Button
                    Command="{Binding UpdateEntryCommand}"
                    Content="Update"
                    Style="{StaticResource DiaryButtons}" />

                <Button
                    Width="100"
                    Background="BurlyWood"
                    Command="{Binding SwitchViewCommand}"
                    Content="Calculator ⭯"
                    Style="{StaticResource DiaryButtons}" />
            </StackPanel>
        </Grid>
        <ContentControl Grid.ColumnSpan="2" Content="{Binding SelectedViewModel}" />
    </Grid>
</UserControl>
