<UserControl
    x:Class="TotallyNormalCalculator.MVVM.Views.CalculatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:TotallyNormalCalculator.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:TotallyNormalCalculator.MVVM.ViewModels"
    MinWidth="550"
    MinHeight="600"
    d:DesignHeight="600"
    d:DesignWidth="650"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:CalculatorViewModel />
    </UserControl.DataContext>


    <Grid>
        <Grid>
            <Border
                Grid.ColumnSpan="2"
                core:EnableDragHelper.EnableDrag="True"
                Background="#252525">
                <Grid
                    Margin="0,20,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">

                    <Button
                        x:Name="btnMinimize"
                        Width="20"
                        Height="20"
                        Margin="0,0,80,0"
                        VerticalContentAlignment="Top"
                        Background="Gray"
                        BorderThickness="0"
                        Command="{Binding MinimizeWindowCommand}"
                        Content="🗕"
                        FontWeight="Bold" />

                    <Button
                        x:Name="btnMaximize"
                        Width="20"
                        Height="20"
                        Margin="0,0,40,0"
                        Background="Gray"
                        BorderThickness="0"
                        Command="{Binding MaximizeWindowCommand}"
                        Content="□"
                        FontWeight="ExtraBold" />

                    <Button
                        x:Name="btnCloseWindow"
                        Width="20"
                        Height="20"
                        Background="Gray"
                        BorderThickness="0"
                        Command="{Binding CloseWindowCommand}"
                        Content="X"
                        FontWeight="Bold" />
                </Grid>
            </Border>

            <Grid
                Grid.ColumnSpan="2"
                Margin="0,70,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Gray">
                <Label
                    x:Name="lblResult"
                    Width="500"
                    Height="75"
                    Margin="30,0,30,0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="{Binding CalculatorText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="40"
                    FontWeight="DemiBold" />
            </Grid>

            <Grid Grid.ColumnSpan="2" Margin="50,175,50,50">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <Button
                    x:Name="btnAc"
                    Command="{Binding AllClearCommand}"
                    Content="AC"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnRemove"
                    Grid.Column="1"
                    Command="{Binding RemoveCharacterCommand}"
                    Content="✄"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnSquareroot"
                    Grid.Column="2"
                    Command="{Binding AddCharacterCommand}"
                    Content="√"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnDivide"
                    Grid.Column="3"
                    Command="{Binding AddCharacterCommand}"
                    Content="÷"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn7"
                    Grid.Row="1"
                    Command="{Binding AddCharacterCommand}"
                    Content="7"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn8"
                    Grid.Row="1"
                    Grid.Column="1"
                    Command="{Binding AddCharacterCommand}"
                    Content="8"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn9"
                    Grid.Row="1"
                    Grid.Column="2"
                    Command="{Binding AddCharacterCommand}"
                    Content="9"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnMultiply"
                    Grid.Row="1"
                    Grid.Column="3"
                    Command="{Binding AddCharacterCommand}"
                    Content="×"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn4"
                    Grid.Row="2"
                    Command="{Binding AddCharacterCommand}"
                    Content="4"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding AddCharacterCommand}"
                    Content="5"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn6"
                    Grid.Row="2"
                    Grid.Column="2"
                    Command="{Binding AddCharacterCommand}"
                    Content="6"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnSubtract"
                    Grid.Row="2"
                    Grid.Column="3"
                    Command="{Binding AddCharacterCommand}"
                    Content="-"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn1"
                    Grid.Row="3"
                    Command="{Binding AddCharacterCommand}"
                    Content="1"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn2"
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding AddCharacterCommand}"
                    Content="2"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn3"
                    Grid.Row="3"
                    Grid.Column="2"
                    Command="{Binding AddCharacterCommand}"
                    Content="3"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnAdd"
                    Grid.Row="3"
                    Grid.Column="3"
                    Command="{Binding AddCharacterCommand}"
                    Content="+"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btn0"
                    Grid.Row="4"
                    Command="{Binding AddCharacterCommand}"
                    Content="0"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnPoint"
                    Grid.Row="4"
                    Grid.Column="1"
                    Content="."
                    Style="{StaticResource CalculatorButtons}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding AddCharacterCommand}" CommandParameter="." />
                            <i:InvokeCommandAction Command="{Binding SwitchViewCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button
                    x:Name="btnPower"
                    Grid.Row="4"
                    Grid.Column="2"
                    Command="{Binding AddCharacterCommand}"
                    CommandParameter="^"
                    Content="xⁿ"
                    Style="{StaticResource CalculatorButtons}" />

                <Button
                    x:Name="btnEquals"
                    Grid.Row="4"
                    Grid.Column="4"
                    Command="{Binding CalculateCommand}"
                    Content="="
                    Style="{StaticResource CalculatorButtons}" />
            </Grid>
        </Grid>
        <ContentControl Content="{Binding SelectedViewModel}" />
    </Grid>
</UserControl>
